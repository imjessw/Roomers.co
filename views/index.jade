			form#formInfo(role="form", method="post", action="/roomer")
				input.form-group.form-control#name(placeholder="Full Name", name="name")
				input.form-group.form-control#email(type="email", placeholder="Email", name="email")
				input.form-group.form-control#age(placeholder="Age", name="age")
				input.form-group.form-control#currentLoc(placeholder="Where do you live now?", name="currentLoc")
				input.form-group.form-control#moveTo(placeholder="Where do you want to live?", name="moveTo")
				input.form-group.form-control#months(placeholder="How long do you plan to stay in months?", name="months")
				input.form-group.form-control#ageMin(placeholder="Minimum you want to live with?", name="ageMin")
				input.form-group.form-control#ageMax(placeholder="Maximum age you want to live with?", name="ageMax")
